<?xml version="1.0" encoding="utf-8"?>
<openbox_menu xmlns="http://openbox.org/3.4/menu">
	<menu id="root-menu" label="Openbox 3.5">
		<separator label="Applications"/>
		<item label="Terminal" icon="/usr/share/icons/Qogir-dark/scalable/apps/terminal.svg">
			<action name="Execute">
				<execute>urxvt</execute>
			</action>
		</item>
		<item label="Web browser" icon="/usr/share/icons/Qogir-dark/scalable/apps/firefox.svg">
			<action name="Execute">
				<execute>firefox</execute>
			</action>
		</item>
		<item label="File manager" icon="/usr/share/icons/Qogir-dark/scalable/apps/file-manager.svg">
			<action name="Execute">
				<execute>pcmanfm</execute>
			</action>
		</item>
		<item label="Task manager" icon="/usr/share/icons/Qogir-dark/scalable/apps/system-monitor.svg">
			<action name="Execute">
				<execute>urxvt -e htop</execute>
			</action>
		</item>
		<item label="Desktop" icon="/usr/share/icons/Qogir-dark/scalable/places/desktop.svg">
			<action name="Execute">
				<execute>pcmanfm --desktop-pref</execute>
			</action>
		</item>
		<separator label="System"/>
		<item label="Reconfigure">
			<action name="Reconfigure"/>
		</item>
		<item label="Restart">
			<action name="Restart"/>
		</item>
		<item label="Log out">
			<action name="Exit"/>
		</item>
		<item label="Shutdown">
			<action name="Execute">
				<execute>shutdown now</execute>
			</action>
		</item>
	</menu>
</openbox_menu>
